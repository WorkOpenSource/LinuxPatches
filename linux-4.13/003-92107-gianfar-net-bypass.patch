+static ssize_t work_ipv4_to_string(__be32 *ipv4, char __user *buf, size_t size) {
+	snprintf(buf, size-1, "%d.%d.%d.%d", (*ipv4 >> 24), (*ipv4 >> 16) & 0xFF,
+	         (*ipv4 >> 8) & 0xFF, *ipv4 & 0xFF);
+	buf[size-1] = '\0';
+	return strlen(buf);
+}
+
+static ssize_t work_string_to_ipv4(__be32 *ipv4, const char __user *buf, size_t size) {
+	char tmp = 0xFA;
+	int ip[4];
+
+	if (size >= 7 && sscanf(buf, "%d.%d.%d.%d%c", &ip[0], &ip[1], &ip[2], &ip[3], &tmp) >= 4) {
+		*ipv4 = 0;
+		*ipv4 |= (ip[0] & 0xFF) << 24;
+		*ipv4 |= (ip[1] & 0xFF) << 16;
+		*ipv4 |= (ip[2] & 0xFF) << 8;
+		*ipv4 |= (ip[3] & 0xFF);
+
+		return size;
+	}
+	else {
+		printk(KERN_ERR "Wrong IP-Format! Expecting XXX.XXX.XXX.XXX\n");
+		return -EINVAL;
+	}
+}
