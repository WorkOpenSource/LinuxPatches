+/** Returns true when address is multicast address (not broadcast) */
+static inline bool ipv4_is_multicast_only(__be32 addr) {
+	return (addr & htonl(0xf0000000)) == htonl(0xe0000000);
+}
+
+/** Returns true when address is multicast address (not broadcast) */
+static inline bool ether_is_multicast_only(const char* mac) {
+	return mac[0] == 0x01;
+}
+
+static inline int work_classify_packet(const struct gfar_private *priv, const char* eth_pkt) {
+	struct ethhdr *eth = (struct ethhdr *) (eth_pkt);
+
+	bool matches_mac = ether_is_multicast_only(eth->h_dest) || ether_addr_equal(eth->h_dest, priv->f_mac);
+
+	// WORK:  Handle only IP packets where MAC=multicast or MAC=our
+	if (eth->h_proto == ETH_P_IP && matches_mac) {
+		struct iphdr *ipv4 = (struct iphdr *) (eth_pkt + ETH_HLEN);
+
+		bool matches_our_ip = ipv4->daddr == priv->f_ipv4;
+		bool matches_mul_ip = ipv4_is_multicast_only(ipv4->daddr);
+
+		// TSI:  If UDP addressed with IP=our or IP=multicast    (must be checked before IP-BROADCAST)
+		if (ipv4->protocol == IPPROTO_UDP && (matches_our_ip || matches_mul_ip)) {
+			struct udphdr *udp = (struct udphdr *) (ipv4 + 1);
+
+			// TSI1:  if TSI1 is enabled
+			if (priv->tsi_dport1 != 0) {
+
+				bool matches_tsi1_port = ntohs(udp->dest) == priv->tsi_dport1;
+				bool matches_tsi1_addr = ipv4->daddr == priv->tsi_mult_addr1;
+
+				// TSI1:  if PORT=matching and ( IP=our or IP=matching-multicast )
+				if (matches_tsi1_port && (matches_our_ip || matches_tsi1_addr)) {
+					return NET_BYPASS_STATUS_USER_TSI1_PACKET;
+				}
+			}
+
+			// TSI2:  if TSI2 is enabled
+			if (priv->tsi_dport2 != 0) {
+
+				bool matches_tsi2_port = ntohs(udp->dest) == priv->tsi_dport2;
+				bool matches_tsi2_addr = ipv4->daddr == priv->tsi_mult_addr2;
+
+				// TSI2:  if PORT=matching and ( IP=our or IP=matching-multicast )
+				if (matches_tsi2_port && (matches_our_ip || matches_tsi2_addr)) {
+					return NET_BYPASS_STATUS_USER_TSI2_PACKET;
+				}
+			}
+		}
+
+		// IP-BROADCAST:  If addressed to IP=!our or IP=multicast   (must be checked after TSI)
+		if (!matches_our_ip || matches_mul_ip) {
+			return NET_BYPASS_STATUS_USER_IP_TRANSFER;
+		}
+	}
+
+	return NET_BYPASS_STATUS_HANDLED_BY_KERNEL;
+}
